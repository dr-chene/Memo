<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:montion="http://schemas.android.com/apk/res-auto">

    <Transition
        montion:constraintSetStart="@id/start"
        montion:constraintSetEnd="@id/end"
        montion:duration="1000"
        montion:motionInterpolator="linear"/>

    <ConstraintSet android:id="@+id/start">

        <Constraint
            android:id="@+id/toolbar_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/actionBarSize"
            android:textColor="@color/black"
            android:textSize="32sp"
            montion:layout_constraintTop_toTopOf="parent"
            montion:layout_constraintBottom_toBottomOf="parent"
            montion:layout_constraintStart_toStartOf="parent"/>

        <Constraint
            android:id="@+id/toolbar_iv_down"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_down_black"
            montion:layout_constraintTop_toTopOf="@id/toolbar_tv_title"
            montion:layout_constraintStart_toEndOf="@id/toolbar_tv_title"
            montion:layout_constraintBottom_toBottomOf="@id/toolbar_tv_title"/>

        <Constraint
            android:id="@+id/toolbar_tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            montion:layout_constraintTop_toBottomOf="@id/toolbar_tv_title"
            montion:layout_constraintStart_toStartOf="@id/toolbar_tv_title" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@id/toolbar_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:textColor="@color/black"
            android:textSize="16sp"
            montion:layout_constraintTop_toTopOf="parent"
            montion:layout_constraintBottom_toBottomOf="parent"
            montion:layout_constraintStart_toStartOf="parent"/>

        <Constraint
            android:id="@id/toolbar_iv_down"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_down_black"
            montion:layout_constraintTop_toTopOf="@id/toolbar_tv_title"
            montion:layout_constraintStart_toEndOf="@id/toolbar_tv_title"
            montion:layout_constraintBottom_toBottomOf="@id/toolbar_tv_title"/>

        <Constraint
            android:id="@id/toolbar_tv_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            montion:layout_constraintTop_toBottomOf="@id/toolbar_tv_title"
            montion:layout_constraintStart_toStartOf="@id/toolbar_tv_title" />
    </ConstraintSet>
</MotionScene>