<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/recycle_item_do_bg"
        android:layout_margin="5dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/recycle_item_do_img"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_todo"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                app:layout_constraintTop_toTopOf="@id/recycle_item_do_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/recycle_item_do_time"/>

            <TextView
                android:id="@+id/recycle_item_do_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="卡村赛季卡伯茨卡阿贾斯伯茨卡将"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:lines="1"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/recycle_item_do_img"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/recycle_item_do_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="11月29日"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintTop_toBottomOf="@id/recycle_item_do_title"
                app:layout_constraintStart_toStartOf="@id/recycle_item_do_title"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/recycle_item_do_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lines="1"
                android:text="下午3：59"
                android:textSize="12sp"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@id/recycle_item_do_date"
                app:layout_constraintStart_toEndOf="@id/recycle_item_do_date"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>
</layout>